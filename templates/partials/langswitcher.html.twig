<ul class="langswitcher">
{% set langobj = grav['language'] %}

{% for key in langswitcher.languages %}

    {% if key == langswitcher.current %}
        {% set lang_url = page.url %}
        {% set active_class = ' active' %}
    {% else %}
        {% set lang_url = base_url_simple ~ langobj.getLanguageURLPrefix(key)~langswitcher.page_route ?: '/' %}
        {% set active_class = '' %}
    {% endif %}

    {% if native_name(key) == 'ua' %}
    <li><a href="{{ lang_url ~ uri.params }}" class="external{{ active_class }}"><img src="{{ url('theme://images/flags/ukraine.png') }}"></a></li>

    {% elseif native_name(key) == 'English' %}
    <li><a href="{{ lang_url ~ uri.params }}" class="external{{ active_class }}"><img src="{{ url('theme://images/flags/united-states.png') }}"></a></li>

    {% elseif native_name(key) == 'Русский' %}
    <li><a href="{{ lang_url ~ uri.params }}" class="external{{ active_class }}"><img src="{{ url('theme://images/flags/russia.png') }}"></a></li>


    {% else %}
    <li><a href="{{ lang_url ~ uri.params }}" class="external{{ active_class }}">{{ native_name(key)|capitalize }}</a></li>
    {% endif %}

{% endfor %}
</ul>
